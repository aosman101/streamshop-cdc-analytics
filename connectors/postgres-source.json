
{
  "name": "streamshop-postgres-cdc",
  "config": {
    "connector.class": "io.debezium.connector.postgresql.PostgresConnector",
    "tasks.max": "1",

    "database.hostname": "postgres",
    "database.port": "5432",
    "database.user": "debezium",
    "database.password": "debezium",
    "database.dbname": "streamshop",

    "topic.prefix": "streamshop",

    "plugin.name": "pgoutput",
    "publication.name": "dbz_publication",
    "publication.autocreate.mode": "disabled",

    "schema.include.list": "public",
    "table.include.list": "public.customers,public.products,public.orders,public.order_items,public.outbox_events",

    "snapshot.mode": "initial",

    "key.converter": "io.apicurio.registry.utils.converter.AvroConverter",
    "key.converter.schema.registry.url": "http://redpanda-0:8081/apis/registry/v2",
    "value.converter": "io.apicurio.registry.utils.converter.AvroConverter",
    "value.converter.schema.registry.url": "http://redpanda-0:8081/apis/registry/v2",
    "apicurio.registry.auto-register": "true",
    "apicurio.registry.find-latest": "true"
  }
}
